<%= simple_form_for Contact.new do |s| %>
	<div class="form-group">
		<%= s.label "Name: ", :class => "searchlabels" %>
		<%= s.text_field(:name, class: 'form-control') %>
	</div>
	<div class="form-group">
		<%= s.label "Your Email: ", :class => "searchlabels" %>
		<%= s.text_field(:email, class: 'form-control') %>
	</div>
	<div class="form-group">
		<%= s.label "Message: ", :class => "searchlabels" %>
		<%= s.text_field(:message, class: 'form-control') %>
	</div>
	<%= s.submit "Send", class: 'btn btn-primary' %>
<% end %>